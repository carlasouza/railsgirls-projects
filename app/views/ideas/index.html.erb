<h1>Listing ideas</h1>

<table>
  <tr>
    <th>Nome</th>
    <th>Descricao</th>
    <th>Link</th>
    <th>Keywords</th>
    <th>Repositorio</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @ideas.each do |idea| %>
  <tr>
    <td><%= idea.nome %></td>
    <td><%= idea.descricao %></td>
    <td><%= idea.link %></td>
    <td><%= idea.keywords %></td>
    <td><%= idea.repositorio %></td>
    <td><%= link_to 'Show', idea %></td>
    <td><%= link_to 'Edit', edit_idea_path(idea) %></td>
    <td><%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

