<% @ideia.each do |ideium| %>
  <tr>
    <td><%= ideium.nome %></td>
    <td><%= ideium.descricao %></td>
    <td><%= ideium.link %></td>
    <td><%= ideium.keywords %></td>
    <td><%= ideium.repositorio %></td>
    <td><%= link_to 'Show', ideium %></td>
    <td><%= link_to 'Edit', edit_ideium_path(ideium) %></td>
    <td><%= link_to 'Destroy', ideium, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

